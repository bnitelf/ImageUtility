<Window x:Class="ImageUtility.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageUtility"
        mc:Ignorable="d"
        Title="Image Utility" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="261*"/>
            <ColumnDefinition Width="539*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- first child takes only what it needs -->
            <RowDefinition Height="*"/>
            <!-- second child takes remaining space -->
        </Grid.RowDefinitions>

        <Canvas Grid.Row="0" Height="50" Grid.ColumnSpan="2">
            <CheckBox x:Name="chkResizeByShorterSide" Content="Resize Shorter Size to" Checked="chkResizeByShorterSide_CheckedChanged" Canvas.Left="10" HorizontalAlignment="Center" Canvas.Top="10" VerticalAlignment="Top" IsChecked="True"/>
            <TextBox x:Name="txtResizeShorterSide" Text="1000" TextChanged="txtResizeShorterSide_TextChanged" Canvas.Left="150" TextWrapping="Wrap" Canvas.Top="7" Width="67" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <Label x:Name="label" Content="px" Canvas.Left="218" Canvas.Top="3" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <CheckBox x:Name="chkResizeByPercent" Content="Resize To Percentage" Checked="chkResizeByPercent_CheckedChanged" Canvas.Left="278" Canvas.Top="9"/>
            <TextBox x:Name="txtResizePercentList"  Text="30,50,70,80" TextChanged="txtResizePercentList_TextChanged" Canvas.Left="415" TextWrapping="Wrap" Canvas.Top="7" Width="227" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <Label x:Name="label1" Content="(ex 30,50)" Canvas.Left="647" Canvas.Top="3"/>

        </Canvas>
        <Border x:Name="borderDropArea" Grid.Row="1" BorderBrush="Black" BorderThickness="0" Background="#FFFFEED1" 
        AllowDrop="True"
        DragEnter="BorderDropArea_DragEnter"
        Drop="BorderDropArea_Drop" Grid.ColumnSpan="2">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Drag images to resize"
       VerticalAlignment="Center" 
       HorizontalAlignment="Center" Foreground="#FF828282" FontSize="20"/>
                <TextBlock HorizontalAlignment="Center" Margin="0 10 0 0">
            <Hyperlink Click="HyperlinkOpenFolder_Click">Open Output Folder</Hyperlink>
                </TextBlock>
            </StackPanel>
        </Border>
    </Grid>
</Window>
